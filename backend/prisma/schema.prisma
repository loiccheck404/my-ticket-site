// This is your Prisma schema file

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User Model - People who buy tickets
model User {
  id            String   @id @default(uuid())
  email         String   @unique
  password      String
  firstName     String
  lastName      String
  walletAddress String?  @unique
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  orders        Order[]
}

// Match Model - Sports events/games
model Match {
  id          String   @id @default(uuid())
  title       String
  description String
  date        DateTime
  venue       String
  imageUrl    String
  category    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  tickets     Ticket[]
  seats       Seat[]
}

// Ticket Model - Different ticket types for matches
model Ticket {
  id             String      @id @default(uuid())
  matchId        String
  match          Match       @relation(fields: [matchId], references: [id])
  type           String
  price          Float
  availableCount Int
  totalCount     Int
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt
  orderItems     OrderItem[]
  seats          Seat[]
}

// Seat Model - Individual seats in the stadium
model Seat {
  id          String     @id @default(uuid())
  matchId     String
  match       Match      @relation(fields: [matchId], references: [id])
  ticketId    String
  ticket      Ticket     @relation(fields: [ticketId], references: [id])
  seatNumber  String
  row         String
  section     String
  isBooked    Boolean    @default(false)
  orderItemId String?    @unique
  orderItem   OrderItem? @relation(fields: [orderItemId], references: [id])
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  @@unique([matchId, seatNumber])
}

// Order Model - User purchases
model Order {
  id            String        @id @default(uuid())
  userId        String
  user          User          @relation(fields: [userId], references: [id])
  totalAmount   Float
  status        String
  paymentMethod String
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  orderItems    OrderItem[]
  transaction   Transaction?
}

// OrderItem Model
model OrderItem {
  id        String   @id @default(uuid())
  orderId   String
  order     Order    @relation(fields: [orderId], references: [id])
  ticketId  String
  ticket    Ticket   @relation(fields: [ticketId], references: [id])
  quantity  Int
  price     Float
  createdAt DateTime @default(now())
  seat      Seat?
}

// Transaction Model
model Transaction {
  id             String   @id @default(uuid())
  orderId        String   @unique
  order          Order    @relation(fields: [orderId], references: [id])
  txHash         String   @unique
  walletAddress  String
  amount         Float
  cryptocurrency String
  status         String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}